{
  "routes": [
    {
      "path": "/mission/<int:mission_id>/inference/list/",
      "methods": ["GET"],
      "handler": "mission_handler",
      "description": "Get a list of all inference result for a mission"
    },
    {
      "path": "/inference/create/",
      "methods": ["POST"],
      "handler": "inference_handler",
      "description": "Create a new inference result"
    },

    {
      "path": "/mission/<int:mission_id>/delete/",
      "methods": ["DELETE"],
      "handler": "mission_handler",
      "description": "Delete All the inference result (if any) along with mission"
    },

    {
      "path": "/mission/create/",
      "methods": ["POST"],
      "handler": "mission_handler",
      "description": "Create a new mission"
    },
    {
      "path": "/mission/list/",
      "methods": ["GET"],
      "handler": "mission_handler",
      "description": "Get a list of all missions"
    },

    {
      "path": "/mission/<int:mission_id>/update/",
      "methods": ["PUT"],
      "handler": "mission_handler",
      "description": "Update a mission"
    },

    {
      "path": "/inference/delete/all/",
      "methods": ["DELETE"],
      "handler": "inference_handler",
      "description": "Delete all the inference results (USE FOR DEBUGGING ONLY)"
    },

    {
      "path":"/mission/<int:mission_id>/inference/result/download/",
      "methods": ["GET"],
      "handler": "inference_handler",
      "description": "Download the inference result for a mission"
    }
  ]
}
